

<div id="animales">
    <section id="box">
        <p>
            <div>
                <!-- --------------------  Filtro busqueda por tipo -------------------- --> 
                Tipo:
                <select id='filtrado_tipo' onclick='onBusquedaAnimal_Tipo()'  style=" text-transform: lowercase;" >
                     <option value="Todos"} ></option>
                     {{#each animales_filtrado_tipo }}
                         <option value={{this}}> {{this}}   </option>
                    {{/each}}
                </select>
                  <!-- --------------------  Filtro busqueda por genero -------------------- --> 
                Genero:
                <select id='filtrado_genero' onclick='onBusquedaAnimal_Genero()'  style=" text-transform: lowercase;" >
                     <option value="Todos"} ></option>
                     {{#each animales_filtrado_genero }}
                         <option value={{this}}> {{this}} </option>
                    {{/each}}
                </select>   
                  <!-- --------------------  Filtro busqueda por raza -------------------- --> 
                Raza:
                <select id='filtrado_raza' onclick='onBusquedaAnimal_Raza()'  style=" text-transform: lowercase;" >
                     <option value="Todos"} ></option>
                     {{#each animales_filtrado_raza }}
                         <option value={{this}}> {{this}} </option>
                    {{/each}}
                </select>                   
                  <!-- --------------------  Filtro busqueda por edad -------------------- --> 
                 <input type="range" id="filtrado_edad_minima" onclick="onBusquedaAnimal_Edad_Minima()" value="0" min="0" max="50" >
                 <input type="range" id="filtrado_edad_maxima"  onclick="onBusquedaAnimal_Edad_Maxima()"  value="50" min="0" max="50"  >

            </div>

            <form name="frmBuscador" method="post" action="/animales/buscar">
                <input type="search" id="Buscado"  name="busqueda"  class="Buscador"  placeholder="Buscar animal por descripcion..." />
                <input type="text"   id = "filtro_tipo_animal"      name="busqueda" value="" />
                <input type="text"   id = "filtro_genero_animal"    name="busqueda" value="" />
                <input type="text"   id = "filtro_raza_animal"      name="busqueda" value="" />

                <input type="text"   id = "filtro_edad_minima_animal"  name="busqueda" value="0" />
                <input type="text"   id = "filtro_edad_maxima_animal"  name="busqueda" value="50" />

                <input type="submit" name="Buscar"> 
            </form>

         
    
       </p>
    </section>
    <ul>
        {{#each animales}}
            <p>
                <li>
                    <div class="top">
                        <h1>
                            {{nombre}}
                        </h1>
                        <div class=""><img id="avatar_animal" src="../images/{{tipo}}.png" width="60" height="60"></div>
                        <p>     {{tipo}}  </p>
                    </div>
                    <div class="bottom">
                        <br>
                        <p><span> Raza:          </span> {{ raza }}         </p>
                        <p><span> Genero:        </span> {{ genero}}       </p>
                        <div class="sign">
                        <a href='/animales/animal/{{id }}' class='button'>Ver mas detalles..</a>
                        </div>
                    </div>
                    </li>
            </p>
        {{/each}}
       
    </ul>
    
    </div>