<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card mt-4 text-center">
      <div class="card-header">
        <h1 >
          Editar animales
        </h1>
      </div>

      <div class="card-body">
        {{> messages }}
        <form action="/animales/edit/{{animal._id}}" method="POST" enctype="multipart/form-data">
          <div class="mb-3">
              <label class="form-label" for="inputNombre">Nombre</label>
              <input type="text" name="nombre" class="form-control" id="inputNombre" placeholder="Nombre" value="{{animal.nombre}}">
          </div>
          <div class="mb-3">
            <label class="form-label" for="inputTipo">Tipo</label>
            <input type="text" name="tipo" class="form-control" id="inputTipo" placeholder="Tipo" value="{{animal.tipo}}">
          </div>
          <div class="mb-3">
            <label class="form-label" for="inputRaza">Raza</label>
            <input type="text" name="raza" class="form-control" id="inputRaza" placeholder="Raza" value="{{animal.raza}}">
          </div>
          <div class="mb-3">
            <label class="form-label" for="inputEmail">Edad</label>
            <input type="number" name="edad" class="form-control" id="inputEdad" placeholder="Edad" value="{{animal.edad}}">
          </div>
          <legend class="col-form-label">Genero</legend>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="genero" id="inlineMasculino" value="Macho" {{ checkedM }}>
            <label class="form-check-label" for="inlineMasculino">Macho</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="genero" id="inlineFemenino" value="Hembra" {{ checkedH }}>
            <label class="form-check-label" for="inlineFemenino">Hembra</label>
          </div>
          <div class="mb-3">
            <label class="form-label" for="inputImage">Imagen</label>
            <img id="image" src="/uploads/{{ animal.image }}" width="60px" alt="image" /></br>

            <label class="form-label" for="inputImage">Modificar imagen</label>
            <input class="form-control" type="file" name="image" id="inputImage">

          </div>
          <div class="mb-3">
            <label for="message-text" class="col-form-label">Descripci√≥n</label>
            <textarea class="form-control" name="descripcion" id="inlineDescription" placeholder="Descripcion del animal">{{animal.descripcion}}</textarea>
          </div>
          <button type="submit" class="btn btn-primary">Editar animal</button>
          {{!-- Sacar modal de eliminar --}}
          </form>
      </div>
    </div>
  </div>
</div>