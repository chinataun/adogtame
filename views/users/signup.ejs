<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card mt-4 text-center">
      <%- include('../partials/messages.ejs') %>
      <div class="card-header">
        <h1>
          Registro de usuario
        </h1>
      </div>
      <div class="card-body">
        <form action="/users/registro" method="POST">
          <div class="form-group">
            <input type="text" class="form-control" name="email" placeholder="Email" value="">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Password" value="">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="confirm_password" placeholder="Confirm Password" value="">
          </div>
          <legend class="col-form-label">Tipo</legend>
              <!-- <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="tipo" id="inlineAdoptante" value="Adoptante">
                <label class="form-check-label" for="inlineAdoptante">Adoptante</label>
              </div> -->
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="tipo" id="inlineProtectora" value="Protectora">
                <label class="form-check-label" for="inlineProtectora">Protectora</label>
              </div>
              <div>
                <button class="btn btn-primary btn-block">Registrar</button>
              </div>

        </form>
      </div>
    </div>
  </div>
</div>









