  <div class="top">
    <h1>
        {{protectoraRender.user.nombre}}
    </h1>
            {{> messages }}
  </div>
    <div class="bottom">
      <div class="animal_image">
        <img src="/uploads/{{ protectoraRender.user.image }}" alt="perrete">
