<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card mt-4 text-center">
      <%- include('../partials/messages.ejs') %>
      <div class="card-header">
        <h1>
          Registro Protectora
        </h1>
      </div>
        <img class="rounded-circle mx-auto d-block logo m-4" src="/images/logo.png" alt="Logo">
      <div class="card-body">
              <form action="/users/registro/protectora" method="POST">
          <div class="form-group">
            <input type="text" class="form-control" name="nombre" placeholder="nombre" value="">
          </div>

          <div class="form-group">
            <input type="text" class="form-control" name="cif" placeholder="nif" value="">
          </div>
          <div class="form-group">
            <input type="text" class="form-control" name="telefono" placeholder="telefono" value="">
          </div>
          <div class="form-group">
            <input type="password" hidden class="form-control" name="password" placeholder="Password" value="<%= password %>">
          </div>
          <div class="form-group">
            <input type="text" hidden class="form-control" name="email" placeholder="email" value="<%= email %>">
          </div>
              <div class="form-floating">
                <textarea class="form-control" placeholder="Leave a description" id="floatingDescripcion" name="descripcion" style="height: 100px"></textarea>
                <label for="floatingDescripcion">Descripci√≥n</label>
              </div>
              <div>
                <button class="btn btn-primary btn-block">
                  Registrar protectora 
                </button>
              </div>

        </form>
      </div>
    </div>
  </div>
</div>