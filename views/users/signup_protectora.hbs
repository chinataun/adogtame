<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card mt-4 text-center">
        {{> messages }}
      <div class="card-header">
        <h1>
          Registro Protectora
        </h1>
      </div>
        <img class="rounded-circle mx-auto d-block logo m-4" src="/images/logo.png" alt="Logo">
      <div class="card-body">
              <form action="/users/registro/protectora" method="POST" enctype="multipart/form-data">
          <div class="form-group">
            <input type="text" class="form-control" name="nombre" placeholder="nombre" value="{{nombre}}">
          </div>

          <div class="form-group">
            <input type="text" class="form-control" name="cif" placeholder="nif" value="{{cif}}">
          </div>
          <div class="form-group">
            <input type="text" class="form-control" name="telefono" placeholder="telefono" value="{{telefono}}">
          </div>
          <div class="form-group">
            <input type="password" hidden class="form-control" name="password" placeholder="Password" value="{{ password }}">
          </div>
          <div class="form-group">
            <input type="text" hidden class="form-control" name="email" placeholder="email" value="{{ email }}">
          </div>
          <div class="form-group">
            <input type="text" hidden class="form-control" name="role" placeholder="role" value="{{ role }}">
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="file" name="image" id="inlineImage">
            <label class="form-check-label" for="inlineImage">Imagen</label>
          </div>
          <div class="form-floating">
            <textarea class="form-control" placeholder="Leave a description" id="floatingDescripcion" name="descripcion" style="height: 100px" value="{{descripcion}}"></textarea>
            <label for="floatingDescripcion">Descripci√≥n</label>
          </div>
          <div>
            <button class="btn btn-primary btn-block">
              Registrar protectora 
            </button>
          </div>

        </form>
      </div>
    </div>
  </div>
</div>