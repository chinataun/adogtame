<div class="registro">
  <div class="card">
    <div class="card-header">
      <h1>
        Registro Protectora
      </h1>
      {{error}}
    </div>
    <div class="card-body">
      <form action="/users/registro/protectora" method="POST" enctype="multipart/form-data" novalidate>
        <div class="mb-3">
          <label class="form-label" for="inputNombre">Nombre*</label>
          <input type="text" class="form-control {{#errors.nombre}}is-invalid{{/errors.nombre}}" name="nombre"
            placeholder="Nombre" value="{{nombre}}" required>
          <div id="validationNombreFeedback" class="invalid-feedback">
            {{errors.nombre}}
          </div>
        </div>

        <div class="mb-3">
          <label class="form-label" for="inputCif">CIF*</label>
          <input type="text" class="form-control {{#errors.cif}}is-invalid{{/errors.cif}}" name="cif" placeholder="CIF"
            value="{{cif}}">
          <div id="validationNombreFeedback" class="invalid-feedback">
            {{errors.cif}}
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="inputTelefono">Teléfono*</label>
          <input type="text" class="form-control {{#errors.telefono}}is-invalid{{/errors.telefono}}" name="telefono"
            placeholder="Telefono" value="{{telefono}}">
          <div id="validationNombreFeedback" class="invalid-feedback">
            {{errors.telefono}}
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="inputCiudad">Ciudad*</label>
          <input type="text" class="form-control {{#errors.ciudad}}is-invalid{{/errors.ciudad}}" name="ciudad"
            placeholder="Ciudad" value="{{ciudad}}">
          <div id="validationNombreFeedback" class="invalid-feedback">
            {{errors.ciudad}}
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="inputImage">Imagen</label>
          {{#if imageUploaded}}
          <img id="image" src="/uploads/{{ imageUploaded }}" width="60px" alt="image" /></br>
          {{/if}}
          <input class="form-control" type="text" hidden name="imageHidden" {{#if
            imageUploaded}}value="{{imageUploaded}}" {{/if}} id="inputImage">
          <input class="form-control {{#errors.image}}is-invalid{{/errors.image}}" type="file" name="image"
            id="inputImage">
          <div id="validationNombreFeedback" class="invalid-feedback">
            {{errors.image}}
          </div>
        </div>
        <div class="mb-3">
          <label for="message-text" class="col-form-label">Descripción</label>
          <textarea class="form-control {{#errors.descripcion}}is-invalid{{/errors.descripcion}}" name="descripcion"
            id="inlineDescription" placeholder="Descripcion de la protectora">{{descripcion}}</textarea>
          <div id="validationNombreFeedback" class="invalid-feedback">
            {{errors.descripcion}}
          </div>
        </div>
        <div class="mb-3">
          <input type="password" hidden class="form-control" name="password" placeholder="Password"
            value="{{ password }}">
        </div>
        <div class="mb-3">
          <input type="text" hidden class="form-control" name="email" placeholder="email" value="{{ email }}">
        </div>
        <div class="mb-3">
          <input type="text" hidden class="form-control" name="role" placeholder="role" value="{{ role }}">
        </div>
        <div class="buttonsCard">
          <button class="btn btn-primary btn-block">
            Registrar protectora
          </button>
        </div>
      </form>
    </div>
  </div>
</div>