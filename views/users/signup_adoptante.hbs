<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card mt-4 text-center">
        {{> messages }}
      <div class="card-header">
        <h1>
          Registro Adoptante
        </h1>
      </div>
        <img class="rounded-circle mx-auto d-block logo m-4" src="/images/logo.png" alt="Logo">
      <div class="card-body">
              <form action="/users/registro/adoptante" method="POST" enctype="multipart/form-data">
          <div class="form-group">
            <input type="text" class="form-control" name="nombre" placeholder="nombre" value="{{nombre}}">
          </div>

          <div class="form-group">
            <input type="text" class="form-control" name="dni" placeholder="dni" value="{{dni}}">
          </div>
          <div class="form-group">
            <input type="text" class="form-control" name="telefono" placeholder="telefono" value="{{telefono}}">
          </div>
          <div class="form-group">
            <input type="password" hidden class="form-control" name="password" placeholder="Password" value="{{ password }}">
          </div>
          <div class="form-group">
            <input type="text" hidden class="form-control" name="email" placeholder="email" value="{{ email }}">
          </div>
          <div class="form-group">
            <input type="text" hidden class="form-control" name="role" placeholder="role" value="{{ role }}">
          </div>
          <div class="form-group">
            <label class="form-label" for="inputImage">Imagen</label>
            <input class="form-control" type="file" name="image" id="inputImage">

          </div>
          <div class="mb-3">
            <label for="message-text" class="col-form-label">Descripci√≥n</label>
            <textarea class="form-control" name="descripcion" id="inlineDescription" placeholder="Descripcion del animal">{{animal.descripcion}}</textarea>
          </div>
          <div>
            <button class="btn btn-primary btn-block">
              Registrar Adoptante 
            </button>
          </div>

        </form>
      </div>
    </div>
  </div>
</div>