<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card mt-4 text-center">
      <div class="card-header">
        <h1>
          Registro de usuario
        </h1>
      </div>
      <div class="card-body">
        {{> messages }}
        <form action="/users/registro" method="POST">
          <div class="form-group">
            <input type="email" class="form-control" name="email" placeholder="Email" value="{{email}}" required>
          </div>
          <div class="form-group">
            {{!-- <input type="password" class="form-control" name="password" placeholder="Password" pattern="^(?=.*[0-9])(?=.*[a-z])(?=.*[A-Z])(?=\S+$).{6,}$" value="{{password}}"> --}}
            <input type="password" class="form-control" name="password" placeholder="Password" value="{{password}}">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="confirm_password" placeholder="Confirm Password" value="{{confirm_password}}">
          </div>
          <legend class="col-form-label">Tipo</legend>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="role" id="inlineAdoptante" value="Adoptante" {{ checkedA }}>
            <label class="form-check-label" for="inlineAdoptante">Adoptante</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="role" id="inlineProtectora" value="Protectora" {{ checkedP }}>
            <label class="form-check-label" for="inlineProtectora">Protectora</label>
          </div>
          <div>
            <button class="btn btn-primary btn-block">Registrar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>